<mvc:View 
    controllerName="zsomanage.controller.Sales"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page 
        id="page" 
        title="{i18n>title}"
        showHeader="false"
        class="sapUiContentPadding">
        <content>
            <Table 
                id="salesOrderTable" 
                inset="false" 
                items="{/SOHeaderSet}">
                <headerToolbar>
                    <Toolbar>
                        <Title 
                            text="{i18n>title}" 
                            level="H1" />
                        <ToolbarSpacer/>
                        <Button text="{i18n>approveSalesOrder}" press="onApprove" type="Accept"></Button>
                        <Button text="{i18n>rejectSalesOrder}" press="onReject" type="Reject"></Button>
                    </Toolbar>
                </headerToolbar>
                
                <columns>
                    <Column>
                        <Text text="{i18n>salesOrderId}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>customerName}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>createdBy}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>createdAt}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>totalItems}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>totalFreight}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>totalOrder}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>status}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{SalesOrderId}" />
                            <Text text="{CustomerId}" />
                            <Text text="{CreatedBy}" />
                            <Text text="{CreatedAt}" />
                            <ObjectNumber number="{TotalItems}" />
                            <ObjectNumber number="{TotalFreight}" />
                            <ObjectNumber number="{TotalOrder}" />
                            <Text text="{Status}" />
                        </cells>
                    </ColumnListItem>
                </items>
            
            </Table>
        </content>
    </Page>
</mvc:View>